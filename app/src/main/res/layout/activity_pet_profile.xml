<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.is_great.pro.pets.PetProfileActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/images"
        android:scaleType="centerCrop"
        />
</FrameLayout>
<ScrollView
    android:id="@+id/ScrollView"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="455dp"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:background="#fff"
        android:elevation="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ee1a57ff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_back"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/call_owner"
                android:clickable="true"
                android:src="@drawable/ic_call_white_24dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/report_error"
                android:src="@drawable/ic_error_white_24dp"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/schedule_appointment"
                android:src="@drawable/ic_schedule_white_24dp"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/share"
                android:src="@drawable/ic_share_white_24dp"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:text="@string/Title"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/part1"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/part2"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/part3"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

</FrameLayout>
